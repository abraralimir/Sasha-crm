{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the SashaLeads AI application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "name": {
          "type": "string",
          "description": "Full name of the user."
        },
        "profilePictureUrl": {
          "type": "string",
          "description": "URL to the user's profile picture.",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "email",
        "name"
      ]
    },
    "ChatMessage": {
      "title": "Chat Message",
      "description": "Represents a single message in the group chat.",
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "The content of the message."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who sent the message."
        },
        "userName": {
          "type": "string",
          "description": "The name of the user who sent the message."
        },
        "userAvatar": {
          "type": "string",
          "description": "URL of the user's avatar."
        },
        "timestamp": {
          "type": "object",
          "description": "The server timestamp when the message was created."
        }
      },
      "required": [
        "text",
        "userId",
        "userName",
        "timestamp"
      ]
    },
    "Lead": {
      "title": "Lead",
      "description": "Represents a potential customer or deal.",
      "type": "object",
      "properties": {
        "contactName": { "type": "string" },
        "companyName": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "status": { "type": "string", "enum": ["New", "Contacted", "Proposal", "Closed", "Lost"] },
        "potentialRevenue": { "type": "number" },
        "lastContacted": { "type": "string", "format": "date-time" }
      },
      "required": ["contactName", "companyName", "email", "status"]
    },
    "Task": {
      "title": "Task",
      "description": "Represents a single task or ticket.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "status": { "type": "string", "enum": ["To Do", "In Progress", "Done"] },
        "assigneeId": { "type": "string" },
        "assigneeName": { "type": "string" },
        "assigneeAvatar": { "type": "string", "format": "uri" },
        "createdAt": { "type": "object" }
      },
      "required": ["title", "status", "createdAt"]
    },
    "Notification": {
        "title": "Notification",
        "description": "Represents a notification for a user.",
        "type": "object",
        "properties": {
            "title": { "type": "string" },
            "message": { "type": "string" },
            "link": { "type": "string", "format": "uri-relative" },
            "read": { "type": "boolean" },
            "createdAt": { "type": "object" }
        },
        "required": ["title", "message", "link", "read", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profiles. Secured by user ID. Each user can only access their own profile."
    },
    "/messages/{messageId}": {
      "schema": { "$ref": "#/entities/ChatMessage" },
      "description": "Stores all group chat messages. All authenticated users can read and create messages."
    },
    "/leads/{leadId}": {
        "schema": { "$ref": "#/entities/Lead" },
        "description": "Stores lead information. All authenticated users can manage leads."
    },
    "/tasks/{taskId}": {
        "schema": { "$ref": "#/entities/Task" },
        "description": "Stores tasks. All authenticated users can manage tasks."
    },
    "/users/{userId}/notifications/{notificationId}": {
        "schema": { "$ref": "#/entities/Notification" },
        "description": "Stores notifications for a specific user. Users can only access their own notifications."
    }
  }
}

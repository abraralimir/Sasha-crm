
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow authenticated users to read the list of all users.
      allow list: if isSignedIn();
      
      // Allow a user to read their own document.
      allow get: if isSignedIn() && request.auth.uid == userId;

      // Allow a user to create their own document upon signup.
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Allow a user to update their own document.
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      // Disallow deleting user documents.
      allow delete: if false;

      // Rules for user-specific notifications
      match /notifications/{notificationId} {
        // Users can read, create, and update their own notifications
        allow read, write: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Rules for 'messages', 'leads', and 'tasks' collections
    match /{collection}/{docId} {
      // Allow any authenticated user to read and write to messages, leads, and tasks.
      allow read, write: if isSignedIn() && (collection == 'messages' || collection == 'leads' || collection == 'tasks');
    }
  }
}

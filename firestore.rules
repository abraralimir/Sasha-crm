
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Generic rule allowing full read/write access to any collection for any authenticated user.
    // This simplifies permissions to unblock development. Stricter rules will be applied later.
    match /{path=**}/{documentId} {
      allow read, write: if isSignedIn();
    }
  }
}

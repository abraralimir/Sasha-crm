/**
 * @file Firestore Security Rules for SashaLeads AI application.
 *
 * Core Philosophy:
 * This ruleset prioritizes rapid prototyping by focusing on authorization and deferring strict schema validation. It aims to provide a secure foundation while allowing for flexible data structures. The security model leans towards open reads where appropriate and restricts write access based on user authentication.
 *
 * Data Structure:
 * - Users: Stored under `/users/{userId}`.
 * - Chat Messages: Stored under `/messages/{messageId}`.
 * - Leads: Stored under `/leads/{leadId}`.
 * - Tasks: Stored under `/tasks/{taskId}`.
 *
 * Key Security Decisions:
 * - User listing is disabled for privacy.
 * - Read access is generally open to authenticated users unless specifically restricted.
 * - Write operations are always gated by authentication.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profiles. Each user can only access their own profile.
     * @path /users/{userId}
     * @allow (create) User A with id 'user_a' can create their own profile at /users/user_a if authenticated.
     * @deny (create) User B with id 'user_b' cannot create a profile at /users/user_a.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth != null && request.auth.uid == userId;
      }

      function isSignedIn() {
        return request.auth != null;
      }

      allow get: if isSignedIn();
      allow list: if false; // User listing is disabled

      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && request.auth.uid == userId;
      allow delete: if isOwner(userId);
    }

    /**
     * @description Allows authenticated users to read and create chat messages.
     * @path /messages/{messageId}
     * @allow (create) Any authenticated user can create a message.
     * @allow (get) Any authenticated user can read a message.
     * @deny (create) An unauthenticated user cannot create a message.
     * @principle Allows public read access but requires authentication for write access.
     */
    match /messages/{messageId} {
      function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

      /**
       * @description Allows authenticated users to manage leads.
       * @path /leads/{leadId}
       * @allow (create) Any authenticated user can create a lead.
       * @allow (get) Any authenticated user can read a lead.
       * @deny (create) An unauthenticated user cannot create a lead.
       * @principle Requires authentication for all operations.
       */
    match /leads/{leadId} {
      function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if isSignedIn();

      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    /**
     * @description Allows authenticated users to manage tasks.
     * @path /tasks/{taskId}
     * @allow (create) Any authenticated user can create a task.
     * @allow (get) Any authenticated user can read a task.
     * @deny (create) An unauthenticated user cannot create a task.
     * @principle Requires authentication for all operations.
     */
    match /tasks/{taskId} {
      function isSignedIn() {
        return request.auth != null;
      }

      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }
  }
}
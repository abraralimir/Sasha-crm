
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow authenticated users to read the list of all users.
      allow list: if isSignedIn();
      
      // Allow a user to read their own document or any other user's document.
      allow get: if isSignedIn();

      // Allow a user to create their own document upon signup.
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Allow a user to update their own document.
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      // Disallow deleting user documents.
      allow delete: if false;

      // Rules for user-specific notifications
      match /notifications/{notificationId} {
        // Allow any authenticated user to create a notification for another user (e.g., for task assignment).
        allow create: if isSignedIn();
        
        // Only allow the user to read, update, or delete their own notifications.
        allow read, update, delete: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Rules for 'messages', 'leads', 'tasks', 'financials' and 'projects' collections
    match /{collection}/{docId} {
      allow read, write: if isSignedIn() && (
        collection == 'messages' || 
        collection == 'leads' || 
        collection == 'tasks' || 
        collection == 'financials' ||
        collection == 'projects'
      );
    }
    
    // Rules for project-specific tasks
    match /projects/{projectId}/tasks/{taskId} {
        // Allow any authenticated user to read and write tasks within any project.
        allow read, write: if isSignedIn();
    }

    // Rules for the 'attendance' collection
    match /attendance/{logId} {
        // Allow any authenticated user to read all logs.
        allow read: if isSignedIn();
        // Allow a user to create their own log entry.
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    // Rules for the 'userStatus' collection
    match /userStatus/{userId} {
        // Allow any authenticated user to list all statuses and get any single status.
        allow list, get: if isSignedIn();
        // Allow a user to create or update their own status document.
        allow write: if isSignedIn() && userId == request.auth.uid;
    }

    // Rules for 'leaveRequests' collection
    match /leaveRequests/{leaveId} {
        // A user can create a request for themselves.
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // All authenticated users can read individual requests and update them (for HR approval).
        allow get, update: if isSignedIn();
    }
    // Separate rule to allow LISTING the entire collection
    match /leaveRequests {
        allow list: if isSignedIn();
    }
    
    // Rules for 'policyDocuments' collection
    match /policyDocuments/{docId} {
        // All authenticated users can read documents.
        allow read: if isSignedIn();
        // Write access should be restricted to admins in a real app. For now, disable it for clients.
        allow write: if false; 
    }
  }
}

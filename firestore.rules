
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow authenticated users to read the list of all users.
      allow list: if isSignedIn();
      
      // Allow a user to read their own document.
      allow get: if isSignedIn() && request.auth.uid == userId;

      // Allow a user to create their own document upon signup.
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      // Allow a user to update their own document.
      allow update: if isSignedIn() && request.auth.uid == userId;
      
      // Disallow deleting user documents.
      allow delete: if false;

      // Rules for user-specific notifications
      match /notifications/{notificationId} {
        // Allow any authenticated user to create a notification for another user (e.g., for task assignment).
        allow create: if isSignedIn();
        
        // Only allow the user to read, update, or delete their own notifications.
        allow read, update, delete: if isSignedIn() && request.auth.uid == userId;
      }
    }

    // Rules for 'messages', 'leads', 'tasks', 'financials' and 'projects' collections
    match /{collection}/{docId} {
      allow read, write: if isSignedIn() && (
        collection == 'messages' || 
        collection == 'leads' || 
        collection == 'tasks' || 
        collection == 'financials' ||
        collection == 'projects'
      );
    }
    
    // Rules for project-specific tasks
    match /projects/{projectId}/tasks/{taskId} {
        // Allow any authenticated user to read and write tasks within any project.
        allow read, write: if isSignedIn();
    }
  }
}

/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a flexible security model, allowing authenticated users to manage their data.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles, accessible only by the user themselves.
 * - /messages/{messageId}: Stores chat messages, publicly readable and writable by authenticated users.
 * - /leads/{leadId}: Stores lead information, manageable by all authenticated users.
 * - /tasks/{taskId}: Stores task information, manageable by all authenticated users.
 *
 * Key Security Decisions:
 * - Listing of `/users` is disallowed to prevent unauthorized enumeration of user accounts.
 * - Data shape is not strictly validated to allow for rapid prototyping.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profiles.
     * @path /users/{userId}
     * @allow (create) Authenticated user with matching userId can create their profile.
     * @allow (get, update, delete) Authenticated user can access and modify their own profile.
     * @deny (create) Non-authenticated user attempts to create a profile.
     * @deny (get, update, delete) Authenticated user attempts to access another user's profile.
     * @principle Enforces user-ownership for profile data.
     */
    match /users/{userId} {
      // Only signed-in users can read or write data
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false; // Disallowing listing users for security.
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow update: if isSignedIn() && isOwner(userId) && resource.data.id == userId;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Manages group chat messages.
     * @path /messages/{messageId}
     * @allow (get, list) All authenticated users can read messages.
     * @allow (create) All authenticated users can create messages.
     * @deny (update, delete) Only the message owner (not implemented) can update or delete messages.
     * @principle Allows public read access and authenticated-user write access for chat messages.
     */
    match /messages/{messageId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false; // Authentication is needed.
    }

    /**
     * @description Manages lead information.
     * @path /leads/{leadId}
     * @allow (get, list, create, update, delete) All authenticated users can manage leads.
     * @deny (create, update, delete) Non-authenticated users cannot manage leads.
     * @principle Allows any authenticated user to manage leads.
     */
    match /leads/{leadId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    /**
     * @description Manages tasks.
     * @path /tasks/{taskId}
     * @allow (get, list, create, update, delete) All authenticated users can manage tasks.
     * @deny (create, update, delete) Non-authenticated users cannot manage tasks.
     */
    match /tasks/{taskId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && resource != null;
      allow delete: if isSignedIn() && resource != null;
    }

    //---------------------------------------------------------------------------------------------
    // Helper functions
    //---------------------------------------------------------------------------------------------

    // isOwner: Returns true if the user ID matches the authenticated user's ID.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // isExistingOwner: Returns true if the user ID matches the authenticated user's ID and the document exists.
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    // isSignedIn: Returns true if the request is authenticated (user is signed in).
    function isSignedIn() {
      return request.auth != null;
    }
  }
}